<Window x:Class="CubeConstruction.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cube Construction Viewer" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 3D Viewport for Cube Construction -->
        <Viewport3D x:Name="viewport" Grid.Column="0" Margin="10">
            <Viewport3D.Camera>
                <PerspectiveCamera x:Name="camera" Position="5,5,5" LookDirection="-5,-5,-5" UpDirection="0,1,0" FieldOfView="60"/>
            </Viewport3D.Camera>
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup x:Name="cubeGroup">
                        <AmbientLight Color="White"/>
                        <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>

        <!-- Right Panel for Controls and Drawing -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Select View to Draw:" Margin="5"/>
            <ComboBox x:Name="viewComboBox" Margin="5" SelectedIndex="0" SelectionChanged="ViewComboBox_SelectionChanged">
                <ComboBoxItem Content="Top View"/>
                <ComboBoxItem Content="Left View"/>
                <ComboBoxItem Content="Front View"/>
            </ComboBox>
            <TextBlock Text="Draw the selected view on the grid:" Margin="5"/>
            <Canvas x:Name="drawingCanvas" Width="200" Height="200" Background="White" Margin="5"/>
            <Button Content="Clear Grid" Click="ClearGrid_Click" Margin="5"/>
            <Button Content="Verify Drawing" Click="VerifyDrawing_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>